.main
  .main-title.text-center
    = t(:name)
  .sec-title.text-center
    %h4= t(:description)
  = form_for @url, :url=> post_path, :html=> {:role => 'form', :id=> 'respond'}, :remote=> true do |f|
    .row
      .col-md-8.col-md-offset-2
        .form-group
          = f.text_field :url, :type=> 'url', :class=> 'form-control col-md-8 surl', :placeholder=> 'http://your.url.here'
          #option.back-fa
            %i.fa.fa-chevron-circle-down.fa-3x
          #clear.back-fa.hide
            %i.fa.fa-undo.fa-3x

